<!DOCTYPE html>
<html>
<head>
  <title>Colloquy</title>
  <%= stylesheet_link_tag    "boss", :media => "all" %>
  <%= stylesheet_link_tag    "style", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<h1>SCCS Colloquy : <%= current_user.role.title.humanize %> Interface</h1>
	<div class="adminbar">
		<h2>Conferences</h2>
		<%= link_to "All Conferences", conferences_path() %>
		<%= link_to "New Conference", new_conference_path(), :remote=>true %>
		<%= link_to "Edit #{@conference.title} Conference", edit_conference_path(@conference), :remote=>true %>


		<h2>Pages</h2>
		<%= link_to "All Pages", boss_pages_path %>
		<%= link_to "New Page", new_conference_page_path(@conference), :remote=>true %>


		<h2>Workshops</h2>


		<h2>Plenaries</h2>
		<%= link_to "All Plenaries", conference_plenaries_path(@conference)  %>

		
		<h2>Attendees</h2>


		<h2>Reviewers</h2>


	</div>

<%= yield %>



<div id="signedin">
	<% if user_signed_in? %>
		Hi <%= current_user.email %>! <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %> 
	<% end %>
</div>


<div id="modalwrap">
	<div class="closemodal">&times; CLOSE</div>
	<div id="modal">
	</div>
</div>


<div id="loaderwrap"></div>
</body>
</html>