<h1>Listing topics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Conference</th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.title %></td>
    <td><%= topic.description %></td>
    <td><%= topic.user_id %></td>
    <td><%= topic.conference_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Topic', new_conference_topic_path(@conference), :remote => true if can? :create, Topic %>
